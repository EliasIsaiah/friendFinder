<div class="container">

  <div class="row">
    <div class="col s12">

      <div class="section">
        <h5 class="center-align">Survey</h5>
        <p class="center-align">Let's get to know you better</p>
      </div>
    </div>
  </div>

  <div class="row">
    <form id="theForm" class="col s12">
      <div class="row name">
        <div class="row">
          <div class="input-field col s12">
            <h5>Name</h5>
            <input id="name" type="text" class="validate">
          </div>
        </div>
        {{#each surveyQuestions}}
        <div class="row">
          <div class="input-field col s12 bottomPadding">
            <h5>{{this.question}}</h5>
            <select id="{{this.id}}">
              <option value="" disabled selected>Choose your option</option>
              <option value="1">1 (strongly disagree)</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5 (strongly agree)</option>

            </select>
          </div>
        </div>
        {{/each}}
    </form>
    <button class="btn waves-effect waves-light" type="submit" name="action">Submit
      <i class="material-icons right">send</i>
    </button>
  </div>

<a class="test waves-effect waves-light btn">button</a>

</div>
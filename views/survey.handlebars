<div class="container">

  <div class="row">
    <div class="col s12">

      <div class="section">
        <h5 class="center-align">Survey</h5>
        <p class="center-align">Let's get to know you better</p>
      </div>
    </div>
  </div>

  <div class="row">
    <form id="theForm" class="col s12 blueTheme">
        <div class="row">
          <div class="input-field col s12">
            <h5>Name</h5>
            <input id="name" type="text" class="validate" aria-required="true" required>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <h5>Profile Picture URL</h5>
            <input id="pictureURL" type="url" class="validate" required>
          </div>
        </div>

        {{#each surveyQuestions}}
        <div class="row">
          <div class="input-field col s12 bottomPadding">
            <h5>{{this.question}}</h5>
            
            <select id="{{this.id}}" aria-required="true" required>
              <option selected disabled name="default" value="">Choose your option</option>
              <option value="1">1 (strongly disagree)</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5 (strongly agree)</option>
            </select>
          
          </div>
        </div>
        {{/each}}
        
    <button id="submit" class="btn waves-effect waves-light" type="submit" name="submit">Submit
      <i class="material-icons right">send</i>
    </button>
    </form>
  </div>

    <!-- Modal Trigger -->
  {{!-- <a class="waves-effect waves-light btn modal-trigger" href="#modal1">Modal</a> --}}

  <!-- Modal Structure -->
  <div id="messageModal" class="modal">
    <div id="modal-content">
      <h4 id="modalHeader"></h4>
      {{!-- <p id="modalP"></p> --}}
    </div>
    <div class="modal-footer">
      <a href="#!" class="modal-close waves-effect waves-green btn-flat">ok</a>
    </div>
  </div>

{{!-- <a class="test waves-effect waves-light btn">button</a> --}}

</div>